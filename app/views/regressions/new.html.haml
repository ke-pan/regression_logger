%section.regression-new
  .container
    =form_for @regression, html: {class: "form-horizontal"} do |f|
      .form-group
        =f.label :name, class: "control-label col-md-1"
        .col-md-3
          =f.text_field :name, class: "form-control"
      .form-group
        =f.label :description, class: "control-label col-md-1"
        .col-md-3
          =f.text_field :description, class: "form-control"
      .form-group
        =f.label :test_set, class: "control-label col-md-1"
        .col-md-3
          =f.collection_select(:test_set_id, TestSet.all, :id, :name, {}, class: "form-control")
      .form-group
        .col-md-offset-1.col-md-3
          =f.submit 'New Regression', class: "btn btn-default"
